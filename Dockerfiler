FROM python:alpine

RUM apk update && apk upgrade && \
    apk add --no-cache git

WORKDIR /usr/src/app
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt
RUN git clone https://github.com/czhu505/Data-602 /usr/src/app/trader-web
EXPOSE 5000
CMD [ "python", "/usr/src/app/Data-602/Trader.py" ]